<%
    @title = 'Torrito' if not defined? @title
    @query = '' if not defined? @query
    @focus = false if not defined? @focus
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head>

	<meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
	<%= stylesheet_link_tag :all, :cache => true %>
    <%= javascript_include_tag :all, :cache => true %>

	<title><%=h @title %></title>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#q').autocomplete('<%= url_for :controller => 'main', :action => 'ac' %>', {max: 8, minChars: 3, selectFirst: false, delay: 200});
            <%= '$(\'#q\').focus();' if @focus %>
        });
    </script>

</head>
<body class="container">

	<div class="header">

		<div class="headerTitle"><%= link_to(image_tag('title.png'), root_path) %></div>
		<div class="headerSearch" style="">
            <form action="<%= url_for :controller => 'search' %>" method="get">
			    <input name="q" id="q" style="padding: 3px 4px 3px 4px; width: 470px; margin-right: 1px;" type="text" value="<%=h @query %>" />
			    <input style="height: 26px; width: 88px; padding-bottom: 2px;" type="submit" value="Search" />
            </form>
		</div>

	</div>

	<div class="content">
		<%= yield %>
	</div>

	<div class="footer">
		Torrito (c) 2010 | About | FAQ
	</div>

</body>
</html>
